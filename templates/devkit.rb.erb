# enable RubyInstaller DevKit usage as a vendorable helper library
unless ENV['PATH'].include?('<%= @mingw_bin_dir %>') then
  phrase = 'Temporarily enhancing PATH to include DevKit...'
  if defined?(Gem)
    Gem.ui.say(phrase) if Gem.configuration.verbose
  else
    puts phrase
  end
  puts "Prepending ENV['PATH'] to include DevKit..." if $DEBUG
  ENV['PATH'] = '<%= @chef_client_bin_dir %>;<%= @mingw_bin_dir %>;' + ENV['PATH']
end
ENV['RI_DEVKIT'] = '<%= @chef_client_embedded_dir %>'
ENV['CC'] = 'gcc'
ENV['CXX'] = 'g++'
ENV['CPP'] = 'cpp'
